{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}

    <h1>Toutes les séries: </h1>
    <div class="container-fluid d-flex flex-wrap">
    {% for program in programs %}
            <div class="row card" style="width: 20rem; margin: 1rem">
                <img class="card-img-top" src="{{ program.poster }}">
                <div class="card-body">
                    <a href="showProgram/{{ program.title }}"><h2 class="card-title">{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2></a>
                    <p class="card-text">{{ program.summary }}</p>
                </div>
            </div>
    {% else %}
        </div>
        Aucune série trouvée.
    {% endfor %}
{% endblock %}
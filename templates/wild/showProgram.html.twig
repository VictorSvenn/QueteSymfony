{% extends 'base.html.twig' %}
{% block title %}{{ slug }}{% endblock %}
{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>
            <div>
                {% for season in seasons %}
                    <a href="/wild/showSeason/{{ season.id }}"><h5>Saison {{ season.number }}</h5></a>
                    <h6>{{ season.description }} {{ season.year }}</h6>
                {% endfor %}
                <strong>Acteurs :</strong>
                <ul>
                    {% for actor in program.actors %}
                        <li><a href="/actor/{{ actor.id }}">{{ actor.name }}</a></li>
                    {% else %}
                        <li>Aucun acteur pour cette série</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
    <div>
    </div>
    <a href="{{ path('wild_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}